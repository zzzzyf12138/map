/* map.wxss */
.container {
  position: relative;
  width: 100%;
  height: 100vh; /* 全屏显示 */
}
.custom-map-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none; /* 避免图层阻挡地图的交互操作 */
}

.search-btn {
  position: absolute;
  top: 10px;
  left: 50%;
  transform: translateX(-50%);
  z-index: 999; /* 确保按钮在最上层 */
  background-color: #fff;
  padding: 10px 20px;
  border-radius: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
}
